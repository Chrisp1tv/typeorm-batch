{
  "moduleFileExtensions": ["js", "ts"],
  "rootDir": ".",
  "testMatch": ["<rootDir>/spec/**/*.spec.(t|j)s"],
  "collectCoverageFrom": ["<rootDir>/src/**/*.(t|j)s"],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "testTimeout": 1000,
  "preset": "ts-jest"
}
